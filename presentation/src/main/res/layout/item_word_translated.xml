<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.gmail.superarch.presentation.screen.student.list.items.WordTranslatedItemViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/wordTextView"
            style="@style/text_normal"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="@{viewModel.wordRU}"
            app:layout_constraintEnd_toStartOf="@+id/imageStar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageStar" />
        <!--app:layout_constraintWidth_percent="0.9"-->

        <ImageView
            android:id="@+id/imageStar"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_margin="5sp"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_star_border_24dp" />

    </android.support.constraint.ConstraintLayout>
</layout>